{
  "workflow_name":"hello",
  "description":"",
  "version":"",
  "workflow_failure_mode":"NoNewCalls",
  "runtimeAttributes":{
    // 设置call task的全局默认属性
    //applyType ： [default, override]
    //  default:  task中未设置时使用该值，此处也未设置时使用cromwell的默认值（0）
    //  override: 强制应用于所有task， 忽略task内的设置
    "maxRetries":{
      "value":0,
      "applyType":"default"
    },
    "continueOnReturnCode":{
      "value":"0",
      "applyType":"override"
    },
    "failOnStderr":{
      "value":false,
      "applyType":"default"
    },
    "backends":{
      "value":"SGE",
      "applyType":"default"
    }
  },
  "parameter":{
    "param1":{
      "type":"String",
      "defaultValue":"",
      "optional":false,
      "description":"Set it when call this task in workflow"
    }
  },
  "tasks":{
    "task1":{
      "dependency":[], //该task依赖的task，用于确定call task的顺序
      "parameterLink":{
        "param1":{
          "value":"param1",
          "from":"workflow" // form: [workflow, task, const]
        }
      },
      "scatterBy":"task1.out1"  //用于依赖于task1.out1的下一步任务的并行
    },
    "task2":{
      "dependency":["task1"],
      "parameterLink":{
        "param1":{
          "value":"task1.scatterBy",  //不再固定task的inputs、result参数，来自依赖任务的结果通过传workflow参数的形式传入
          "from":"task"
        },
        "mem":{
          "value":"2",
          "from":"const" //常量
        }
      }
    }
  },
  "output":{
    //流程最终输出结果，curl -X GET "http://localhost:8000/api/workflows/{version}/id/outputs"
    //与task的形式相同
    "out1":{
      "type":"String",
      "value":"",
      "description":""
    }
  }
}